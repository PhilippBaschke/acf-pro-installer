{
  "name": "pivvenit/acf-pro-installer",
  "description": "An Advanced Custom Fields PRO installer for composer",
  "type": "composer-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Sander Klock",
      "email": "support@pivvenit.nl"
    }
  ],
  "keywords": [
    "wordpress", "composer", "wp", "plugin", "acf", "env", "pro"
  ],
  "require": {
    "php": ">=7.2",
    "composer-plugin-api": "~1.1",
    "vlucas/phpdotenv": "^3.0.0",
    "league/uri-query-parser": "^1.0",
    "league/uri-parser": "^1.4"
  },
  "require-dev": {
    "composer/composer": "~1.8",
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": { "Pivvenit\\Composer\\Installers\\ACFPro\\": "src/" }
  },
  "extra": {
    "class": "Pivvenit\\Composer\\Installers\\ACFPro\\ComposerPlugin"
  },
  "scripts": {
    "lint": "phpcs src tests --standard=PSR2",
    "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
    "coverage": "phpunit --coverage-html coverage",
    "coveralls": "coveralls"
  }
}
