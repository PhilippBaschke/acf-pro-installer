<phpunit bootstrap="vendor/autoload.php">

  <testsuites>
    <testsuite name="ACF PRO Installer Test Suite">
      <directory>tests</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory>src</directory>
    </whitelist>
  </filter>

  <logging>
    <log type="junit" target="build/logs/test-result.xml"/>
    <log type="coverage-clover" target="build/logs/test-coverage.xml"/>
  </logging>
</phpunit>
